<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityLogin">
    <ImageView
        android:id="@+id/loginlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/etUserEmail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:src="@drawable/mylogo"/>
    <EditText
        android:id="@+id/etUserEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/loginlogo"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/etUserPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter your gmail"
        android:gravity="center"
        android:padding="8dp"
        android:shadowColor="#E60808"
        android:shadowRadius="100"
        android:background="@drawable/rect_back"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etUserPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/etUserEmail"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter your password"
        android:gravity="center"
        android:padding="8dp"
        android:shadowColor="#E60808"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:shadowRadius="100"
        android:background="@drawable/rect_back"
        android:inputType="textVisiblePassword"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password?"
        app:layout_constraintEnd_toEndOf="@id/etUserPassword"
        android:textColor="@color/purple_700"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/etUserPassword"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/defaultColor"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/lablNoAccount"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etUserPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Login"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"/>
    <TextView
        android:id="@+id/lablNoAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:text="don't have account?"/>
    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/lablNoAccount"
        app:layout_constraintTop_toTopOf="@id/lablNoAccount"
        app:layout_constraintBottom_toBottomOf="@id/lablNoAccount"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:padding="5dp"
        android:textColor="@color/purple_700"
        android:text="signup"/>
    <com.google.android.gms.common.SignInButton
        android:id="@+id/bt_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lablNoAccount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>