<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivitySignup">
    <ImageView
        android:id="@+id/loginlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@id/labelCreateAccount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/mylogo"/>
    <TextView
        android:id="@+id/labelCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginlogo"
        app:layout_constraintBottom_toTopOf="@id/etUserName"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/defaultColor"
        android:text="Create Account to \nContinue,"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/etUserName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/labelCreateAccount"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/etUserEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter your name"
        android:gravity="center"
        android:padding="8dp"
        android:shadowColor="#E60808"
        android:inputType="text"
        android:shadowRadius="100"
        android:background="@drawable/rect_back"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etUserEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etUserName"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@id/etUserPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter your gmail"
        android:gravity="center"
        android:padding="8dp"
        android:shadowColor="#E60808"
        android:shadowRadius="100"
        android:background="@drawable/rect_back"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etUserPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/etUserEmail"
        app:layout_constraintBottom_toTopOf="@id/etUserPasswordVerify"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter your password"
        android:gravity="center"
        android:padding="8dp"
        android:inputType="textVisiblePassword"
        android:shadowColor="#E60808"
        android:layout_marginBottom="10dp"
        android:shadowRadius="100"
        android:background="@drawable/rect_back"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etUserPasswordVerify"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/etUserPassword"
        app:layout_constraintBottom_toTopOf="@id/btnSignup"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Re-enter your password"
        android:gravity="center"
        android:inputType="textVisiblePassword"
        android:padding="8dp"
        android:shadowColor="#E60808"
        android:labelFor="@id/etUserPassword"
        android:layout_marginBottom="10dp"
        android:shadowRadius="100"
        android:background="@drawable/rect_back"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/defaultColor"
        app:layout_constraintTop_toBottomOf="@id/etUserPasswordVerify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Signup"
        android:paddingLeft="50dp"
        android:layout_marginBottom="50dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toTopOf="@id/labelAlreadyAccount"
        />
    <TextView
        android:id="@+id/labelAlreadyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnSignup"
        android:layout_marginBottom="30dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/btnGoToLoginActivity"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Already have an account\? "
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/btnGoToLoginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/labelAlreadyAccount"
        android:textColor="@color/defaultColor"
        app:layout_constraintStart_toEndOf="@id/labelAlreadyAccount"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Login"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/labelAlreadyAccount"
        android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>