<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="1.5dp"
    android:background="#497599"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityMaps">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvUserName"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/mylogo"
        android:scaleType="centerCrop"
        android:layout_marginStart="10dp"
        app:civ_border_color="#FF000000"/>
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="22sp"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/profileImage"
            app:layout_constraintBottom_toBottomOf="@id/profileImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profileImage"
            android:background="#497599"
            android:text="@string/muhammad_nasir"/>
    <LinearLayout
        android:id="@+id/linearLayoutLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#497599"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvLabelTimeDuration"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="@string/time_duration"
            android:paddingStart="20dp"
            android:scaleX="0.8"
            android:textSize="16sp"
            android:scaleY="0.8"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/tvTimeDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="........."
            android:gravity="center"
            android:padding="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvSeperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/linearLayoutLeft"
        app:layout_constraintTop_toTopOf="@id/linearLayoutLeft"
        android:text="|"
        android:textColor="@color/white"
        android:background="#497599"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/linearLayoutLeft"
        android:scaleY="1"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/linearLayoutRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="15dp"
        android:visibility="visible"
        android:background="#497599"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toEndOf="@id/tvSeperator"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvLabelDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/speed"
            android:scaleX="0.8"
            android:textSize="16sp"
            android:scaleY="0.8"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="........."
            android:gravity="center"
            android:padding="5dp"
                />
    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutLeft"
        app:layout_constraintBottom_toTopOf="@id/bottomIconLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<LinearLayout
    android:id="@+id/bottomIconLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="#497599">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMyCurrentLocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="50dp"
        android:visibility="visible"
       android:layout_marginEnd="40dp"
        android:background="@drawable/loc_icon"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTrackMe"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="50dp"
        android:visibility="gone"
        android:layout_marginEnd="40dp"
        android:background="@drawable/start_tracking_icon"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClearAll"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="50dp"
        android:visibility="gone"
        android:layout_marginEnd="40dp"
        android:background="@drawable/clear_icon"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnShareInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:padding="50dp"
        android:visibility="visible"
        android:background="@drawable/share_icon"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnShowMyProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:padding="50dp"
        android:visibility="visible"
        android:background="@drawable/profile_icon"
        />

</LinearLayout>
   <TextView
       android:id="@+id/btnRecenter"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:background="@color/blue"
       android:text="ReCenter"
       android:textSize="16sp"
       android:gravity="center"
       android:visibility="visible"
       android:padding="10dp"
       android:textColor="@color/white"
       android:layout_marginBottom="20dp"
/>
</androidx.constraintlayout.widget.ConstraintLayout>