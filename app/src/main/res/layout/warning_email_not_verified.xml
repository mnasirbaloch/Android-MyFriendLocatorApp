<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="#003167"
        android:text="Verify Your Email Address"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvInfoText"
        android:paddingTop="30dp"
        />
    <TextView
        android:id="@+id/tvInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="#655F5F"
        android:layout_marginTop="10dp"
        android:text="@string/email_verification_warning"
         app:layout_constraintBottom_toTopOf="@id/tvText"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imgThumpUp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toTopOf="@id/btnSendVerificationLink"
        app:layout_constraintTop_toBottomOf="@id/tvInfoText"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/grl"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendVerificationLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgThumpUp"
        android:text="Send Verification Link"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:background="#D97827"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/purple_700"
        android:background="@drawable/close_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>