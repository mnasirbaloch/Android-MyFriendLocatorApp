<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#D3497599"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="#D97827"
        android:text="Account created successfully"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/tvInfoText"
        android:textStyle="bold"
        android:paddingTop="30dp"
        />
    <TextView
        android:id="@+id/tvInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="#DDC9C9"
        android:layout_marginTop="10dp"
        android:text="@string/please_verify_your_account_by_clicking_on_the_link_sent_to_you_through_email_if_you_did_not_receive_email_in_inbox_please_check_spam_box_in_your_email"
        app:layout_constraintBottom_toTopOf="@id/tvText"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imgThumpUp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toTopOf="@id/btnGoToGmail"
        app:layout_constraintTop_toBottomOf="@id/tvInfoText"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/tp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGoToGmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgThumpUp"
        android:text="Open Gmail"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:background="#D97827"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/close_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>