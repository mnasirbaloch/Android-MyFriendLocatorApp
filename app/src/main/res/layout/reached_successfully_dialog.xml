<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D3497599"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:text="@string/you_reached_successfully_to_your_destination"
        android:textSize="30sp"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/imgThumpUp"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imgThumpUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btnHomeActivity"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/tup"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHomeActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgThumpUp"
        android:text="Home Screen"
        app:layout_constraintEnd_toStartOf="@id/btnCloseApp"
        android:textStyle="bold"
        android:background="#497599"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCloseApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Close App"
        app:layout_constraintTop_toTopOf="@id/btnHomeActivity"
        app:layout_constraintBottom_toBottomOf="@id/btnHomeActivity"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#497599"
        android:paddingLeft="10dp"
        android:elevation="10dp"
        app:layout_constraintWidth_percent="0.3"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/btnHomeActivity"
        />
    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/close_button"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>