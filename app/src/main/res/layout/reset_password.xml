<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_700"
    android:paddingBottom="20dp"
    android:layout_margin="0dp"
    android:layout_height="wrap_content">
   <EditText
       android:id="@+id/etUserEmail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:maxLines="1"
       android:inputType="textEmailAddress"
       app:layout_goneMarginTop="5dp"
       android:textColor="@color/black"
       android:background="@color/white"
       app:layout_constraintBottom_toTopOf="@id/btnSendPasswordResetLink"
       android:layout_marginTop="45dp"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:hint="@string/enter_your_email"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:textColorHint="@color/black"
       android:layout_marginBottom="10dp"
       app:layout_constraintTop_toTopOf="parent"
       />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendPasswordResetLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/etUserEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCloseDialog"
        android:background="@color/blue"
        android:text="Reset Password"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toTopOf="@id/btnSendPasswordResetLink"
        app:layout_constraintStart_toEndOf="@id/btnSendPasswordResetLink"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/blue"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Cancel"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/btnSendPasswordResetLink"/>
</androidx.constraintlayout.widget.ConstraintLayout>